                            </div>
                        </div>
                        <div class="spec specHidden" id="spec10">
                            <div class="specH1">
                                <input type="text" placeholder="Nombre de la Especificacion" name="specT10" class="specName10">
                            </div>
                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            <div class="specH2">
                                <input type="text" placeholder="Descripcion de la Especificacion" name="specD10" class="specDesc10">
                            </div>
                        </div>
                        <div class="buttonsContainer">
                            </divclass>
                            <button type="button" class="specButton" id="addSpec">
                                Agregar Especificacion
                            </button>
                            <button type="button" class="specButton" id="removeSpec">
                                Quitar Especificacion
                            </button>
                        </div>
                    </div>
                    <!-- Cambiar esto para que al apretar el boton se cree el producto -->
                    <div class="entregar">
                        <button type="submit" class="ghost" id="signUp">Crear Producto</button>
                    </div>
                </form>
            </div>

        </main>
        <script type="text/javascript" src="/js/productCreation.js"></script>
        <%- include("./partials/footer") -%>
</body>
