<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") -%>
        <link rel="stylesheet" href="/css/productCreation.css">
        <title>Creacion de Producto</title>
        <!------ header ------->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <!---------------- header--------- -->
    <%- include("./partials/header") -%>

        <main>
            <div class="container">
                <form action="/product/creation" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <h4>Producto</h4>
                        <div class="input-group input-group-icon">
                            <select name="category" id="category">
                                <% categories.forEach(element=> { %>
                                    <% console.log(element.name) %>  
                                    <option value="<% element.name %> ">
                                        <% element.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <div class="input-icon"><i class="fa fa-database" aria-hidden="true"></i></div>
                        </div>
                        <div class="input-group input-group-icon"><input type="name" name="name"
                                placeholder="Nombre del producto" />
                            <div class="input-icon"><i class="fa fa-bookmark" aria-hidden="true"></i></div>
                        </div>
                        <div class="input-group input-group-icon"><input type="Model" name="model"
                                placeholder="Modelo" />
                            <div class="input-icon"><i class="fa fa-terminal" aria-hidden="true"></i></div>
                        </div>
                        <div class="input-group input-group-icon" id="table">
                            <div class="table-cell">
                                <textarea cols="80" class="descripciones" placeholder="DescripciÃ³n" name="description"
                                    style="resize:none"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-half">
                            <h4>Color</h4>
                            <div class="input-group input-group-icon"><input id="colour" type="text" placeholder="Color"
                                    name="colour" />
                                <div class="input-icon"><i class="fa fa-terminal" aria-hidden="true"></i></div>
                            </div>
                        </div>
                        <div class="col-half">
                            <h4>Price</h4>
                            <div class="input-group input-group-icon">
                                <input placeholder="Precio" type="number" name="price">
                                <div class="input-icon">$</div>
                            </div>
                        </div>
                        <div class="row">
                            <h4>Imagen del producto</h4>
                            <div>
                                <div><input type="file" name="image"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Cambiar esto para que al apretar el boton se cree el producto -->
                    <div class="entregar">
                        <button type="submit" class="ghost" id="signUp">Crear Producto</button>
                    </div>
                </form>
            </div>
        </main>

</body>
<%- include("./partials/footer") -%>