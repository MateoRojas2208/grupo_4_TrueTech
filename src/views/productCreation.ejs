                            <div class="specH2">
                                <input type="text" placeholder="Descripcion de la Especificacion" name="specD3" class="specDesc3">
                            </div>
                        </div>
                        <div class="spec specHidden" id="spec4">
                            <div class="specH1">
                                <input type="text" placeholder="Nombre de la Especificacion" name="specT4" class="specName4">
