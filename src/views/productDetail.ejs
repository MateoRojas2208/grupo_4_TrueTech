<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") -%>
    <link rel="stylesheet" href="/css/productDetail.css">
    <title>Detalle Producto</title>
    <!------ header ------->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <style type="text/css">
      .product-small-img img {
        width: 100%;
        border: 1px solid rgba(0, 0, 0, .2);
        padding: 8px;
        margin: 10px 10px 15px;
        cursor: pointer;
      }
    </style>
</head>

<body>
  <!---------------- header--------- -->
  <%- include("./partials/header") -%>

    <main>
      <div class="container">
        <!-- Im치genes del producto -->

        <div class="product">
          <div class="img-container">
            <img id="imageBox" src=" <%-product.image-%> ">
          </div>
        </div>

        <script type="text/javascript">
          function myFunction(smallImg) {
            var fullImg = document.getElementById("imageBox");
            fullImg.src = smallImg.src;
          }
        </script>

        <!-- Descripci칩n del producto -->
        <div class="product-description">
          <div class="ProductInfo">
            <span>
              <%- product.name -%>
            </span>
            <p>
              <%- product.description -%>
            </p>
          </div>
          <!-- Precio del producto -->
          <div class="buttonsProduct">
            <div class="product-price">
              <span>
                $ <%- product.price -%>
              </span>
              <a href="/product" class="cart-btn">Agragar al carrito</a>
            </div>
            <!-- ------------------------------Mostrar solo a creador del producto----------------------------- -->
            <div class="edit-product">
              <a href="/product/edit/<%- product.id -%>" class="cart-btn">Editar Producto</a>
            </div>
            <form action="/product/destroy/<%- product.id -%>" method="POST" enctype="multipart/form-data">
              <div class="delete-product">
                <button type="submit" class="cart-btn" id="erase">Eliminar Producto</button>
              </div>
            </form>
          </div>

        </div>
      </div>
      <!-- Especificaciones del producto || M치s informaci칩n -->
      <div class="more-info">
        <h2>Especificaciones</h2>
        <div class="contenido">
          <% for( let i=0; i < spec.length; i++ ) { %>
            <div class="inside">
              <%- spec[i].title -%>
                <div class="resalted">
                  : <%-spec[i].description -%>
                </div>
            </div>
            <% } %>
        </div>
      </div>
    </main>
    <!------------------ footer------------------------->
    <%- include("./partials/footer") -%>
</body>